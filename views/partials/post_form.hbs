    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
  </div>

  <div>
    <label for="body">Body:</label>
    <textarea id="body" name="body" required></textarea>
  </div>

  <button type="submit">Submit</button>
</form>
